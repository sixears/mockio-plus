name:                mockio-plus

-- PVP summary:      +-+------- breaking API changes
--                   | | +----- non-breaking API additions
--                   | | | +--- code changes with no API change
version:             0.2.0.0
synopsis:            MonadIO, Mocked, Logged, with Text.
description:         MonadIO, Mocked, Logged, with Text.
cabal-version:       >= 1.10
license:             MIT
license-file:        LICENSE
author:              Martyn J. Pearce
maintainer:          haskell@sixears.com
build-type:          Simple
library
  ghc-options:        -O2 -W -Wall -fhelpful-errors
  exposed-modules:    MockIO.Directory, MockIO.File, MockIO.OpenFile

  other-modules:
  default-extensions: FlexibleContexts
                    , NoImplicitPrelude
                    , OverloadedStrings
                    , PatternSynonyms
                    , QuasiQuotes
                    , RankNTypes
                    , UnicodeSyntax
                    , ViewPatterns

  build-depends:      base, base-unicode-symbols, bytestring, data-default
                    , data-textual, exceptions, lens, logging-effect, mtl, text

                    , fpath          >= 1.1.4.1
                    , fstat          >= 1.0.1.0
                    , log-plus       >= 0.0.2.2
                    , mockio         >= 0.0.3.0
                    , mockio-log     >= 0.0.4.0
                    , monaderror-io  >= 1.1.0.1
                    , monadio-plus   >= 1.4.7.0
                    , more-unicode   >= 0.0.15.0
                    , tfmt           >= 0.2.4.0

  hs-source-dirs:      src
  default-language:    Haskell2010

-------------------------------------------------------------------------------

test-suite mockio-plus-test
  ghc-options:      -O2 -W -Wall -fhelpful-errors
  type:             exitcode-stdio-1.0
  hs-source-dirs:   t
  main-is:          mockio-plus-test.hs
  build-depends:    base, mockio-plus
  default-language: Haskell2010

-------------------------------------------------------------------------------
